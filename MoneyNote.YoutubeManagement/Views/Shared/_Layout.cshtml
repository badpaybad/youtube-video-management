<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
@{ 
    var layoutdata = LayoutModel.Init(Context);
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@RenderSection("MetaTitle", false) - @MoneyNote.YoutubeManagement.Configs.Config.Domain</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- jsGrid -->
    <link rel="stylesheet" href="/plugins/jsgrid/jsgrid.min.css">
    <link rel="stylesheet" href="/plugins/jsgrid/jsgrid-theme.min.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("MetaHeader", false)
</head>
<body class="hold-transition sidebar-collapse layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <partial name="_Navbar" model="layoutdata" />
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <partial name="_MainSidebar" model="layoutdata" />
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">
                                @RenderSection("BodyTitle", false)
                            </h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            @if (IsSectionDefined("BodyBreadcrumb"))
                            {
                                @RenderSection("BodyBreadcrumb", false)
                            }
                            else
                            {
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <!--<li class="breadcrumb-item"><a href="#">Layout</a></li>
                                        <li class="breadcrumb-item active">Top Navigation</li>
                                    -->
                                </ol>
                            }

                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    @RenderBody()
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <partial name="_ControlSidebar" model="layoutdata" />
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                @MoneyNote.YoutubeManagement.Configs.Config.Slogan
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2020 @MoneyNote.YoutubeManagement.Configs.Config.Domain, Themes by <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/dist/js/adminlte.min.js"></script>

    <!-- jsGrid -->
    <script src="/plugins/jsgrid/demos/db.js"></script>
    <script src="/plugins/jsgrid/jsgrid.min.js"></script>

    <script src="~/js/site.js"></script>
    <script>

        jQuery(document).ajaxComplete(function (event, xhr, settings) {
            //
            if (xhr.responseText.indexOf("<!DOCTYPE html>") >= 0) {
                window.location = "/Login";
            }
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
